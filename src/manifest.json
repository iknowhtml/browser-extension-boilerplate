{
  "manifest_version": 2,
  "name": "Browser Extension Template",
  "version": "0.0.1",
  "description": "A basic template for a cross-browser extension.",
  "permissions": [],
  "icons": {},
  "browser_action": {
    "default_title": "Browser Extension",
    "default_popup": "popup/index.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background_scripts/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts / index.js"],
      "run_at": "document_start"
    }
  ]
}
